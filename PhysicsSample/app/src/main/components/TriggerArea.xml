<?xml version="1.0" encoding="utf-8" ?>
<ComponentSchema
  packageName="com.meta.spatial.samples.physicssample"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="https://developers.meta.com/horizon/spatial-sdk/0.8.1/ComponentSchema.xsd"
>
<Component
    name="TriggerArea"
    description="A Component that is triggered when an entity with a Trigger component enters the trigger area."
  >
    <StringAttribute name="eventName" defaultValue="trigger" />
    <FloatAttribute name="value" defaultValue="10.0f" />
    <Vector3Attribute name="size" defaultValue="0.1f, 0.1f, 0.1f" />
  </Component>
</ComponentSchema>
