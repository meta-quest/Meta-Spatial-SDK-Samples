<?xml version="1.0" encoding="utf-8" ?>
<ComponentSchema
  packageName="com.meta.spatial.samples.physicssample"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="https://developers.meta.com/horizon/spatial-sdk/0.8.1/ComponentSchema.xsd"
>
<Component
    name="Button"
    description="A Component that makes an object act like a button."
  >
    <StringAttribute name="eventName" defaultValue="trigger" />
    <BooleanAttribute name="isDown" defaultValue="false" />
    <Vector3Attribute name="downOffset" defaultValue="0.0f, -0.012f, 0.0f" />
    <Vector3Attribute name="startPosition" defaultValue="0.0f, 0.0f, 0.0f" />
  </Component>
</ComponentSchema>
