<?xml version="1.0" encoding="utf-8" ?>
<ComponentSchema
  packageName="com.meta.spatial.samples.physicssample"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="https://developers.meta.com/horizon/spatial-sdk/0.9.2/ComponentSchema.xsd"
>
<Component name="UpAndDown">
    <Description>
A Component that animates a transform up and down.
    </Description>
    <FloatAttribute name="amount" defaultValue="0.1f" />
    <FloatAttribute name="speed" defaultValue="0.5f" />
    <FloatAttribute name="offset" defaultValue="0.0f" />
    <Vector3Attribute name="startPosition" defaultValue="0f, 0f, 0f" />
  </Component>
</ComponentSchema>
