<?xml version="1.0" encoding="utf-8" ?>
<ComponentSchema
  packageName="com.meta.spatial.samples.uisetsample"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="https://developers.meta.com/horizon/spatial-sdk/0.10.1/ComponentSchema.xsd"
>
<Component
    name="LookAtHead"
    description="A component to rotate an object to look at the user's head"
  >
    <FloatAttribute name="xOffset" defaultValue="0f" />
    <FloatAttribute name="yOffset" defaultValue="0f" />
    <FloatAttribute name="zOffset" defaultValue="1f" />
    <BooleanAttribute name="once" defaultValue="true" />
    <BooleanAttribute name="hasLooked" defaultValue="false" />
  </Component>
</ComponentSchema>
