<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="1024dp"
  android:layout_height="1024dp"
>

    <ImageView
    android:id="@+id/timerDots"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/timer_dots"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
  />

    <ImageView
    android:id="@+id/timerSmallDots"
    android:layout_width="273dp"
    android:layout_height="266dp"
    android:layout_marginEnd="600dp"
    android:src="@drawable/timer_small_dots"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
  />

    <TextView
    android:id="@+id/totalTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="600dp"
    android:text="15'"
    android:textAlignment="center"
    android:textColor="@color/purple"
    android:textSize="90dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
  />


    <TextView
    android:id="@+id/minutes"
    android:layout_width="300dp"
    android:layout_height="210dp"
    android:layout_marginBottom="200dp"
    android:text="00"
    android:textAlignment="center"
    android:textColor="@color/white"
    android:textSize="180dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
  />

    <TextView
    android:id="@+id/minutesText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="160dp"
    android:text="Min"
    android:textAlignment="center"
    android:textColor="@color/gray"
    android:textSize="90dp"
    app:layout_constraintStart_toEndOf="@+id/minutes"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
  />

    <TextView
    android:id="@+id/seconds"
    android:layout_width="300dp"
    android:layout_height="210dp"
    android:text="00"
    android:textAlignment="center"
    android:textColor="@color/white"
    android:textSize="180dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/minutes"
  />

    <TextView
    android:id="@+id/secondsText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="260dp"
    android:text="Sec"
    android:textAlignment="center"
    android:textColor="@color/purple"
    android:textSize="90dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/seconds"
    app:layout_constraintTop_toTopOf="parent"
  />

</androidx.constraintlayout.widget.ConstraintLayout>
