<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
>

  <TextView
    android:id="@+id/mruk_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:text="Keyboard Tracker Sample"
    android:textSize="30sp"
    android:textStyle="bold"
    android:gravity="center"
  />

  <TextView
    android:id="@+id/explain_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:text="Track physical keyboards with virtual bounding boxes displayed over detected keyboards. Requires scene permission and keyboard tracking enabled in Settings -> Devices -> Keyboard -> Show my keyboard."
    android:textSize="24sp"
    android:gravity="center"
  />

  <TextView
    android:id="@+id/scene_permission_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:text="PLACEHOLDER"
    android:textSize="24sp"
    android:gravity="center"
  />

  <TextView
    android:id="@+id/keyboard_tracking_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:text="PLACEHOLDER"
    android:textSize="24sp"
    android:gravity="center"
  />

  <Button
    android:id="@+id/start_stop_tracker"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="5dp"
    android:background="@android:color/white"
    android:text="PLACEHOLDER"
  />

  <Button
    android:id="@+id/close_sample"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="5dp"
    android:background="@android:color/white"
    android:text="Close Sample"
  />

</LinearLayout>
