<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
>
  <TextView
    android:id="@+id/mruk_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Raycast Sample"
    android:textSize="30sp"
    android:textStyle="bold"
    android:gravity="center"
  />
  <TextView
    android:id="@+id/mruk_sample_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="This sample showcases raycasting from your right controller to the scene. Use your captured scene or load an example from a json file.You can toggle between showing only the first or all hits."
    android:textSize="18sp"
    android:gravity="start"
  />
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
  >
    <TextView
      android:id="@+id/json_file_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      android:text="Select JSON file:"
    />
    <Spinner
      android:id="@+id/json_file_spinner"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_margin="5dp"
      android:layout_weight="1"
      android:background="@android:color/white"
    />
  </LinearLayout>
  <Button
    android:id="@+id/load_scene_from_json"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="5dp"
    android:background="@android:color/white"
    android:text="Load scene from JSON"
  />
  <Button
    android:id="@+id/launch_scene_capture"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="5dp"
    android:background="@android:color/white"
    android:text="Launch scene capture"
  />
  <Button
    android:id="@+id/load_scene_from_device"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="5dp"
    android:background="@android:color/white"
    android:text="Load scene from device"
  />
  <Button
    android:id="@+id/clear_scene"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="5dp"
    android:background="@android:color/white"
    android:text="Clear scene"
  />
  <Button
    android:id="@+id/close_sample"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="20dp"
    android:background="@android:color/white"
    android:text="Close Sample"
  />
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    android:orientation="horizontal"
  >
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginEnd="10dp"
      android:text="Show Outlines"
      android:textSize="18sp"
      android:gravity="center_vertical"
    />
    <CheckBox
      android:id="@+id/checkbox_scene_objects"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="10dp"
      android:text="Scene Objects"
      android:checked="true"
    />
    <CheckBox
      android:id="@+id/checkbox_global_mesh"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="10dp"
      android:text="Global Mesh"
    />
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    android:orientation="horizontal"
  >
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginEnd="10dp"
      android:text="Raycast Hits"
      android:textSize="18sp"
      android:gravity="center_vertical"
    />
    <RadioGroup
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
    >
      <RadioButton
        android:id="@+id/raycast_hits_all"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:text="All"
        android:checked="true"
      />
      <RadioButton
        android:id="@+id/raycast_hits_single"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:text="First Only"
      />
    </RadioGroup>
  </LinearLayout>
</LinearLayout>
